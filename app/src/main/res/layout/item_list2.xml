<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gift_image"
                android:layout_width="@dimen/_150dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/gift_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gift Card : "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/gift_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/gift_type"
                        android:textColor="@color/light_black"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description : "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/gift_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:textSize="13sp"/>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/gift_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount : "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/gift_discount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/gift_discount"
                        android:textColor="@color/light_black"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/gift_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minimum Purchase Amount : "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/gift_amount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/gift_amount"
                        android:textColor="@color/light_black"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/gift_purchased"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Date : "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/gift_purchased1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/gift_purchased"
                        android:textColor="@color/light_black"
                        android:textSize="13sp"/>

                </RelativeLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/gift_expired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Expired : "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/gift_expired1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/gift_expired"
                        android:textColor="@color/light_black"
                        android:textSize="13sp"/>

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>